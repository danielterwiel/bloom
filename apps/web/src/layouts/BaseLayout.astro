---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Flower Industry Directory",
  description = "Explore the global flower industry directory with comprehensive company data, insights, and analytics.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <slot />
  </body>
</html>
