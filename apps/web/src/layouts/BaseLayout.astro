---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import Header from "../components/astro/Header.astro";
import Footer from "../components/astro/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Flower Industry Directory",
  description = "Explore the global flower industry directory with comprehensive company data, insights, and analytics.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ClientRouter />
  </head>
  <body class="flex min-h-screen flex-col bg-background text-foreground">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
